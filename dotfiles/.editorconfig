root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100
indent_style = space
indent_size = 4

[*.{html,css,scss,js,coffee,ts,vue,yml,json,rb,erb,slim}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
